{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"noImplicitAny": false,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"typeRoots": ["./src/types", "./node_modules/@types"],
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.vue"
	],
	"exclude": [
		"node_modules"
	]
}
